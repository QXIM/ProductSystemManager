<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neuedu.entity.OrderItem">

    <insert id="addOrderItem" parameterType="com.neuedu.entity.OrderItem">
insert into orderItem(user_id, orderItem_no,product_id,product_name,product_image,current_unit_price,quantity,total_price,create_time) values(#{user_id},#{orderItem_no},#{product_id},#{product_name},#{product_image},#{current_unit_price},#{quantity},#{total_price},now())

    </insert>


</mapper>